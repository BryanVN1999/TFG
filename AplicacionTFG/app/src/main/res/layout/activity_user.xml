<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#abebc6"
        tools:context=".UserActivity">
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/dataUser"
          android:width="300dp"
          android:height="100dp"
          android:text="@string/user"
          android:gravity="center"
          android:textSize="30sp"
          android:textStyle="bold"
          android:fontFamily="@font/quicksand"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.495"
          app:layout_constraintVertical_bias="0.025"/>
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/nameLabel"
          android:width="250dp"
          android:height="50dp"
          android:text="@string/nameLabel"
          android:textSize="20sp"
          android:gravity="center_vertical"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/dataUser"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.099"
          app:layout_constraintVertical_bias="0.042"/>
<EditText android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/name"
          android:width="250dp"
          android:height="50dp"
          android:textSize="15sp"
          android:gravity="center_vertical"
          android:inputType="textPersonName"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/nameLabel"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.099"
          app:layout_constraintVertical_bias="0.032"/>
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/surnameLabel"
          android:width="250dp"
          android:height="50dp"
          android:text="@string/surnameLabel"
          android:textSize="20sp"
          android:gravity="center_vertical"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/name"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.099"
          app:layout_constraintVertical_bias="0.042"/>
<EditText android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/surname"
          android:width="250dp"
          android:height="50dp"
          android:textSize="15sp"
          android:gravity="center_vertical"
          android:inputType="textPersonName"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/surnameLabel"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.099"
          app:layout_constraintVertical_bias="0.04"/>
<Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:width="150dp"
        android:height="50dp"
        android:text="@string/nextActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintVertical_bias="0.127"/>
</androidx.constraintlayout.widget.ConstraintLayout>